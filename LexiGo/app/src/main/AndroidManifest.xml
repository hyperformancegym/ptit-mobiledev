<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Quyền truy cập Internet để gọi API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lexigo_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lexigo_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.LexiGo">

        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LexiGo.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity -->
        <activity
            android:name=".activities.AuthActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Home Activity -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/app_name" />

        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/profile" />

        <!-- Update Profile Activity -->
        <activity
            android:name=".activities.UpdateProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Cập nhật thông tin" />

        <!-- Change Password Activity -->
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Đổi mật khẩu" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Quên mật khẩu" />

        <!-- Detailed Statistics Activity -->
        <activity
            android:name=".activities.DetailedStatisticsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Thống kê chi tiết" />

        <!-- Vocabulary Activities -->
        <activity
            android:name=".activities.VocabTopicsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chủ đề từ vựng" />

        <activity
            android:name=".activities.VocabLessonsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Bài học từ vựng" />

        <activity
            android:name=".activities.VocabQuizActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Quiz từ vựng" />

        <!-- Grammar Activities -->
        <activity
            android:name=".activities.GrammarLessonsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Bài học ngữ pháp" />

        <activity
            android:name=".activities.GrammarLessonDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chi tiết ngữ pháp" />

        <!-- Quiz Activity (Unified for Vocab & Grammar) -->
        <activity
            android:name=".activities.QuizActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Quiz" />

        <!-- Listening Activities -->
        <activity
            android:name=".activities.LevelSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chọn cấp độ" />

        <activity
            android:name=".activities.ListeningExerciseActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Bài nghe" />

        <!-- Reading Activities -->
        <activity
            android:name=".activities.ReadingPassagesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Luyện đọc" />

        <activity
            android:name=".activities.ReadingPassageDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Bài đọc" />

        <activity
            android:name=".activities.ReadingQuizActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Trắc nghiệm" />

        <!-- Chat Activity -->
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chat AI" />

        <!-- Dictionary Activity -->
        <activity
            android:name=".activities.DictionaryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Từ điển Anh - Việt" />

    </application>

</manifest>