<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.DictionaryActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.LexiGo.AppBarLayout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.LexiGo.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:title="@string/dictionary"
            app:navigationIcon="@drawable/ic_back"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Search Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.LexiGo.Card.Dictionary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_dictionary_title"
                        android:textAppearance="@style/TextAppearance.LexiGo.TitleSmall"
                        android:layout_marginBottom="@dimen/spacing_sm"/>

                    <!-- Search Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.LexiGo.TextInputLayout.Search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_word_hint"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="@color/dictionary_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearchWord"
                            style="@style/Widget.LexiGo.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Search Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearch"
                        style="@style/Widget.LexiGo.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/search"
                        app:backgroundTint="@color/dictionary_primary"
                        app:icon="@drawable/ic_search"
                        app:iconGravity="textStart"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Loading Text -->
            <TextView
                android:id="@+id/tvLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/spacing_lg"
                android:text="Thinking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:visibility="gone"/>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_xl"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/avatar_xl"
                    android:layout_height="@dimen/avatar_xl"
                    android:src="@drawable/ic_category_dictionary"
                    android:alpha="0.3"
                    android:contentDescription="@string/dictionary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="@string/empty_search_hint"
                    android:textAppearance="@style/TextAppearance.LexiGo.Body"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"/>

            </LinearLayout>

            <!-- Result Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResult"
                style="@style/Widget.LexiGo.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <!-- Word Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_sm">

                        <TextView
                            android:id="@+id/tvWord"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.LexiGo.TitleLarge"
                            android:textColor="@color/dictionary_primary"
                            tools:text="Word"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/ivSpeaker"
                            style="@style/Widget.LexiGo.Button.Icon"
                            android:layout_width="@dimen/touch_target_min"
                            android:layout_height="@dimen/touch_target_min"
                            android:contentDescription="Speak"
                            android:visibility="gone"
                            app:icon="@drawable/ic_volume"
                            app:iconTint="@color/dictionary_primary"/>

                    </LinearLayout>

                    <!-- Phonetic -->
                    <TextView
                        android:id="@+id/tvPhonetic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.LexiGo.Body"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:visibility="gone"
                        tools:text="/fəˈnetɪk/"/>

                    <!-- Part of Speech -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/tvPartOfSpeech"
                        style="@style/Widget.LexiGo.Chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:visibility="gone"
                        app:chipBackgroundColor="@color/dictionary_surface"
                        android:textColor="@color/dictionary_on_surface"
                        tools:text="noun"/>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="@dimen/spacing_sm"/>

                    <!-- Translation -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/translation_label"
                        android:textAppearance="@style/TextAppearance.LexiGo.Label"
                        android:layout_marginTop="@dimen/spacing_sm"/>

                    <TextView
                        android:id="@+id/tvTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.LexiGo.BodyLarge"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        tools:text="Translation here"/>

                    <!-- Definitions -->
                    <TextView
                        android:id="@+id/tvDefinitionsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/definitions_label"
                        android:textAppearance="@style/TextAppearance.LexiGo.Label"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvDefinitions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.LexiGo.Body"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:visibility="gone"
                        tools:text="Definitions here"/>

                    <!-- Examples -->
                    <TextView
                        android:id="@+id/tvExamplesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/examples_label"
                        android:textAppearance="@style/TextAppearance.LexiGo.Label"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvExamples"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.LexiGo.BodySmall"
                        android:fontFamily="@font/nunito_italic"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:visibility="gone"
                        tools:text="Examples here"/>

                    <!-- Synonyms -->
                    <TextView
                        android:id="@+id/tvSynonymsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/synonyms_label"
                        android:textAppearance="@style/TextAppearance.LexiGo.Label"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvSynonyms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.LexiGo.BodySmall"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:visibility="gone"
                        tools:text="Synonyms here"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Error State -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutErrorState"
                style="@style/Widget.LexiGo.Card.Error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_xl">

                    <ImageView
                        android:layout_width="@dimen/icon_size_xxl"
                        android:layout_height="@dimen/icon_size_xxl"
                        android:src="@drawable/ic_error"
                        android:alpha="0.5"
                        android:contentDescription="@string/error"
                        app:tint="@color/error"/>

                    <TextView
                        android:id="@+id/tvErrorMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/word_not_found"
                        android:textAppearance="@style/TextAppearance.LexiGo.Body"
                        android:textColor="@color/error"
                        android:textAlignment="center"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
