<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_lg">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textAppearance="@style/TextAppearance.LexiGo.Headline"
            android:textColor="@color/primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/login_subtitle"
            android:textAppearance="@style/TextAppearance.LexiGo.Body"
            android:textColor="@color/text_secondary"/>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.LexiGo.TextInputLayout.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/email"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/primary"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:fontFamily="@font/font_nunito"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.LexiGo.TextInputLayout.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/primary"
            app:endIconMode="password_toggle"
            app:boxBackgroundColor="@color/surface_variant"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:fontFamily="@font/font_nunito"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/forgot_password"
            android:textAppearance="@style/TextAppearance.LexiGo.Link"
            android:paddingVertical="@dimen/spacing_xs"
            android:background="?attr/selectableItemBackground"/>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_lg"
            android:text="@string/login_button"
            android:textSize="@dimen/text_body"
            android:fontFamily="@font/nunito_bold"
            app:cornerRadius="@dimen/radius_lg"
            app:backgroundTint="@color/primary"
            android:elevation="@dimen/elevation_md"/>

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="@dimen/spacing_lg">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/outline"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:text="@string/or_continue_with"
                android:textSize="16dp"
                android:textAppearance="@style/TextAppearance.LexiGo.Body"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/nunito_medium"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/outline"/>

        </LinearLayout>

        <!-- Social Login Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Google -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:icon="@drawable/ic_google"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_sm"
                app:iconTint="@null"
                app:cornerRadius="@dimen/radius_md"
                app:strokeColor="@color/outline"
                android:text="Google"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/nunito_medium"/>

            <!-- Facebook -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFacebook"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                app:icon="@drawable/ic_facebook"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_sm"
                app:iconTint="@null"
                app:cornerRadius="@dimen/radius_md"
                app:strokeColor="@color/outline"
                android:text="Facebook"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/nunito_medium"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>