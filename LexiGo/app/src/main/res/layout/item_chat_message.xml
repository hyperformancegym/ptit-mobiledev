<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp"
    android:clipToPadding="false">

    <!-- Guideline to limit user message to 75% width -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineUserMessageStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <!-- Guideline to limit bot message to 75% width -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBotMessageEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBotMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"

        app:cardElevation="2dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeWidth="0dp"
        android:layout_margin="2dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelineBotMessageEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"

        tools:visibility="visible">

        <TextView
            android:id="@+id/tvBotMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Hello! How can I help you today?"
            android:textColor="@color/text_primary"
            android:textSize="16sp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        app:cardElevation="2dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/primary"
        app:strokeWidth="0dp"
        android:layout_margin="2dp"

        app:layout_constraintStart_toStartOf="@id/guidelineUserMessageStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="1.0"

        tools:visibility="visible">
        <TextView
            android:id="@+id/tvUserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="I want to learn English."
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>