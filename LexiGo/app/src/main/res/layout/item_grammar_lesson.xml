<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.LexiGo.Card.Interactive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_sm"
        android:gravity="center_vertical">

        <!-- Icon Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/avatar_lg"
            android:layout_height="@dimen/avatar_lg"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/grammar_surface"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/iv_lesson_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_md"
                android:src="@drawable/ic_menu_book"
                android:scaleType="centerInside"
                app:tint="@color/grammar_primary"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical">

            <!-- Level Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/tv_lesson_level"
                style="@style/Widget.LexiGo.Chip.Grammar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beginner"
                android:textSize="@dimen/text_caption"
                app:chipMinHeight="24dp"
                android:layout_marginBottom="@dimen/spacing_xs"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tv_lesson_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.LexiGo.TitleSmall"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Present Simple Tense"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_lesson_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:textAppearance="@style/TextAppearance.LexiGo.BodySmall"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Learn how to use the present simple tense in everyday conversations."/>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:src="@drawable/outline_right"
            android:layout_marginStart="@dimen/spacing_sm"
            android:contentDescription="@null"
            app:tint="@color/text_hint"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>