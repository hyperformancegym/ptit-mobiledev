<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.LexiGo.Card.Interactive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:layout_marginHorizontal="@dimen/spacing_xs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <!-- Category Icon Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIconBg"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/vocab_surface"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imgCategoryIcon"
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:layout_gravity="center"
                android:src="@drawable/ic_category_vocab"
                android:contentDescription="@null"
                app:tint="@color/vocab_primary"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCategoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vocabulary"
                android:textAppearance="@style/TextAppearance.LexiGo.TitleSmall"/>

            <TextView
                android:id="@+id/tvCategoryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:text="100 từ mới"
                android:textAppearance="@style/TextAppearance.LexiGo.BodySmall"/>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="@dimen/icon_size_sm"
            android:layout_height="@dimen/icon_size_sm"
            android:src="@drawable/outline_right"
            android:contentDescription="@null"
            app:tint="@color/text_hint"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>