<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.LexiGo.Card.Interactive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_sm"
        android:gravity="center_vertical">

        <!-- Thumbnail -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/avatar_lg"
            android:layout_height="100dp"
            app:cardCornerRadius="@dimen/radius_sm"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/reading_surface"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivPassageThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                tools:src="@tools:sample/avatars"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical">

            <!-- Level Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/tvPassageLevel"
                style="@style/Widget.LexiGo.Chip.Reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beginner"
                android:textSize="@dimen/text_caption"
                app:chipMinHeight="24dp"
                android:layout_marginBottom="@dimen/spacing_xs"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tvPassageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.LexiGo.TitleSmall"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="The Great Adventure of Sherlock Holmes"/>

            <!-- Tags/Meta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_sm">

                <ImageView
                    android:layout_width="@dimen/icon_size_xs"
                    android:layout_height="@dimen/icon_size_xs"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    android:contentDescription="@null"
                    app:tint="@color/text_secondary"/>

                <TextView
                    android:id="@+id/tvPassageTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.LexiGo.Caption"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Fiction, Adventure, 500 words"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="@dimen/icon_size_sm"
            android:layout_height="@dimen/icon_size_sm"
            android:src="@drawable/outline_right"
            android:layout_marginStart="@dimen/spacing_sm"
            android:contentDescription="@null"
            app:tint="@color/text_hint"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>