<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.LexiGo.Card.Interactive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <!-- Topic Icon Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIconBg"
            android:layout_width="@dimen/icon_size_xxl"
            android:layout_height="@dimen/icon_size_xxl"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/vocab_surface"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/iv_topic_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_sm"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                app:tint="@color/vocab_primary"
                tools:src="@android:drawable/ic_menu_compass"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_md">

            <!-- Topic Name -->
            <TextView
                android:id="@+id/tv_topic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.LexiGo.TitleSmall"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Travel-Culture"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_topic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.LexiGo.BodySmall"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Learn essential vocabulary for traveling around the world."/>

            <!-- Bottom Row: Level Badge + Quiz Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="center_vertical">

                <!-- Level Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/tv_topic_level"
                    style="@style/Widget.LexiGo.Chip.Beginner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beginner"
                    android:textSize="@dimen/text_caption"
                    app:chipMinHeight="24dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <!-- Quiz Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_quiz"
                    style="@style/Widget.LexiGo.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconSize="14dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@color/vocab_primary"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>