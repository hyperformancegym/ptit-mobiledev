<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================
         LEXIGO ANIMATION STYLES
         ============================================ -->

    <!-- Window Animation Style - Activity Transitions -->
    <style name="WindowAnimationStyle.LexiGo" parent="@android:style/Animation.Activity">
        <!-- Activity Opening -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        
        <!-- Activity Closing -->
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        
        <!-- Task Opening/Closing -->
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Bottom Sheet Animation Style -->
    <style name="WindowAnimationStyle.LexiGo.BottomSheet" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Dialog Animation Style -->
    <style name="WindowAnimationStyle.LexiGo.Dialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <!-- Fade Animation Style (for overlays) -->
    <style name="WindowAnimationStyle.LexiGo.Fade" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- ============================================
         LAYOUT ANIMATIONS FOR RECYCLERVIEWS
         ============================================ -->

    <!-- Use in XML: android:layoutAnimation="@anim/layout_animation_fall_down" -->
    <!-- Or programmatically with AnimationUtils.loadLayoutAnimation() -->

</resources>
