<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================
         LEXIGO DESIGN SYSTEM - CHIP STYLES
         ============================================ -->

    <!-- Default Chip -->
    <style name="Widget.LexiGo.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="chipCornerRadius">@dimen/radius_full</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="iconStartPadding">@dimen/spacing_sm</item>
    </style>

    <!-- Filter Chip -->
    <style name="Widget.LexiGo.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="chipCornerRadius">@dimen/radius_full</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <!-- Input Chip (dismissable) -->
    <style name="Widget.LexiGo.Chip.Input" parent="Widget.Material3.Chip.Input">
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="chipCornerRadius">@dimen/radius_full</item>
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIconTint">@color/text_secondary</item>
    </style>

    <!-- Assist Chip -->
    <style name="Widget.LexiGo.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="chipCornerRadius">@dimen/radius_full</item>
        <item name="chipStrokeColor">@color/outline</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- ============================================
         LEVEL BADGES
         ============================================ -->

    <style name="Widget.LexiGo.Chip.Beginner" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/level_beginner</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <style name="Widget.LexiGo.Chip.Intermediate" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/level_intermediate</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <style name="Widget.LexiGo.Chip.Advanced" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/level_advanced</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <!-- ============================================
         CATEGORY BADGES
         ============================================ -->

    <style name="Widget.LexiGo.Chip.Vocab" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/vocab_surface</item>
        <item name="android:textColor">@color/vocab_on_surface</item>
        <item name="chipIconTint">@color/vocab_primary</item>
    </style>

    <style name="Widget.LexiGo.Chip.Grammar" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/grammar_surface</item>
        <item name="android:textColor">@color/grammar_on_surface</item>
        <item name="chipIconTint">@color/grammar_primary</item>
    </style>

    <style name="Widget.LexiGo.Chip.Listening" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/listening_surface</item>
        <item name="android:textColor">@color/listening_on_surface</item>
        <item name="chipIconTint">@color/listening_primary</item>
    </style>

    <style name="Widget.LexiGo.Chip.Reading" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/reading_surface</item>
        <item name="android:textColor">@color/reading_on_surface</item>
        <item name="chipIconTint">@color/reading_primary</item>
    </style>

    <!-- ============================================
         SEMANTIC CHIPS
         ============================================ -->

    <style name="Widget.LexiGo.Chip.Success" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/success</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <style name="Widget.LexiGo.Chip.Error" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <style name="Widget.LexiGo.Chip.Warning" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/warning</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <style name="Widget.LexiGo.Chip.Info" parent="Widget.LexiGo.Chip">
        <item name="chipBackgroundColor">@color/info</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>

    <!-- ============================================
         COUNT BADGES (Small circular)
         ============================================ -->

    <style name="Widget.LexiGo.Badge" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:paddingHorizontal">@dimen/spacing_xs</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_badge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
