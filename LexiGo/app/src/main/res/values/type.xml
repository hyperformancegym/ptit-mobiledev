<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================
         LEXIGO DESIGN SYSTEM - TYPOGRAPHY
         Font: Nunito
         ============================================ -->

    <!-- Display Styles -->
    <style name="TextAppearance.LexiGo.Display" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Headline Styles -->
    <style name="TextAppearance.LexiGo.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Title Styles -->
    <style name="TextAppearance.LexiGo.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_title_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextAppearance.LexiGo.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.LexiGo.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_title_small</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">600</item>
    </style>

    <!-- Body Styles -->
    <style name="TextAppearance.LexiGo.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.LexiGo.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextAppearance.LexiGo.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Label Styles -->
    <style name="TextAppearance.LexiGo.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.LexiGo.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Caption Style -->
    <style name="TextAppearance.LexiGo.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontWeight">400</item>
    </style>

    <!-- Overline Style -->
    <style name="TextAppearance.LexiGo.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/font_nunito</item>
        <item name="android:fontFamily">@font/font_nunito</item>
        <item name="android:textSize">@dimen/text_overline</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- ============================================
         SPECIALIZED TEXT STYLES
         ============================================ -->

    <!-- Error Text -->
    <style name="TextAppearance.LexiGo.Error" parent="TextAppearance.LexiGo.Caption">
        <item name="android:textColor">@color/error</item>
    </style>

    <!-- Success Text -->
    <style name="TextAppearance.LexiGo.Success" parent="TextAppearance.LexiGo.Caption">
        <item name="android:textColor">@color/success</item>
    </style>

    <!-- Link Text -->
    <style name="TextAppearance.LexiGo.Link" parent="TextAppearance.LexiGo.Body">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontWeight">600</item>
    </style>

    <!-- Hint Text -->
    <style name="TextAppearance.LexiGo.Hint" parent="TextAppearance.LexiGo.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- White Text (for dark backgrounds) -->
    <style name="TextAppearance.LexiGo.Title.OnPrimary" parent="TextAppearance.LexiGo.Title">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="TextAppearance.LexiGo.Body.OnPrimary" parent="TextAppearance.LexiGo.Body">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="TextAppearance.LexiGo.BodySmall.OnPrimary" parent="TextAppearance.LexiGo.BodySmall">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TextAppearance.LexiGo.Tab" parent="TextAppearance.LexiGo.Label">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">600</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>
</resources>
