<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Food Image" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toTopOf="@id/imgFood"
        app:layout_constraintEnd_toStartOf="@id/txtPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:text="Item Name" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/imgFood"
        app:layout_constraintTop_toBottomOf="@id/txtName"
        app:layout_constraintEnd_toStartOf="@id/txtPrice"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="Information Of Item1" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/txtDesc"
        app:layout_constraintEnd_toStartOf="@+id/btnPlus"
        tools:text="6$" />

    <ImageButton
        android:id="@+id/btnPlus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_add"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/txtQuantity"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtQuantity"
        android:contentDescription="Add item" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnMinus"
        app:layout_constraintTop_toBottomOf="@id/txtPrice"
        android:layout_marginTop="4dp"
        tools:text="1" />

    <ImageButton
        android:id="@+id/btnMinus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_remove"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtQuantity"
        android:contentDescription="Remove item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imgFood"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>